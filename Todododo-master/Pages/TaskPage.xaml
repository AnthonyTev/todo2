<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TODO.Pages.TaskPage"
             Title="Tasks">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <CollectionView x:Name="TaskCollectionView"
                            SelectionMode="None"
                            ReorderMode="Enabled"
                            ReorderCompleted="OnReorderCompleted">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="5" Spacing="10">
                            <CheckBox IsChecked="{Binding IsCompleted}" CheckedChanged="OnCompletedChanged" />
                            <Label Text="{Binding Title}" VerticalOptions="Center" />
                            <Button Text="Edit" Clicked="OnEditTaskClicked" />
                            <Button Text="Delete" Clicked="OnDeleteTaskClicked" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
